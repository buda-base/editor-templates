##
## Entity and generic property shapes for external refs outside a given graph
##
RootShapes:
  a owl:Ontology ;
  owl:imports <http://purl.bdrc.io/shapes/core/RootLocalShapes/> ;
  owl:versionInfo "Initial SHACL constraints" ;
.
bds:NoteShape
  sh:property bds:NoteShape-noteSource ;
.
bds:NoteShape-noteSource
  a sh:PropertyShape ;
  sh:message "a :noteSource must be an :Instance or other :BiblioEntity"@en ;
  sh:path bdo:noteSource ;
  sh:class bdo:BiblioEntity ;
.
bds:ContentLocationShape
  sh:property bds:ContentLocationShape-contentLocationInstance ;
.
bds:ContentLocationShape-contentLocationInstance
  a sh:PropertyShape ;
  rdfs:label "contentLocationInstance Shape"@en ;
  sh:message "a :ContentLocation may refer to, at most one, bdo:Instance as the source of the content."@en ;
  sh:path bdo:contentLocationInstance ;
  sh:class bdo:Instance ;
  sh:maxCount 1 ;
.
