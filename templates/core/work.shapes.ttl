# baseURI: http://purl.bdrc.io/shapes/core/WorkShapes/
# imports: http://purl.bdrc.io/shapes/core/RootShapes/
# prefix: WorkShapes

@prefix WorkShapes: <http://purl.bdrc.io/shapes/core/WorkShapes/>
@prefix adm: <http://purl.bdrc.io/ontology/admin/> .
@prefix bdd: <http://purl.bdrc.io/data/> .
@prefix bdo: <http://purl.bdrc.io/ontology/core/> .
@prefix bdr: <http://purl.bdrc.io/resource/> .
@prefix bds: <http://purl.bdrc.io/ontology/shapes/core/> .
@prefix bdsa: <http://purl.bdrc.io/ontology/shapes/adm/> .
@prefix bf: <http://id.loc.gov/ontologies/bibframe/> .
@prefix cc: <http://creativecommons.org/ns#> .
@prefix dash: <http://datashapes.org/dash#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix iiif2: <http://iiif.io/api/presentation/2#> .
@prefix iiif3: <http://iiif.io/api/presentation/3#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix swa: <http://topbraid.org/swa#> .
@prefix tbr: <http://purl.bdrc.io/ontology/toberemoved/> .
@prefix tosh: <http://topbraid.org/tosh#> .
@prefix vcard: <http://www.w3.org/2006/vcard/ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

WorkShapes:
  a owl:Ontology ;
  owl:imports <http://purl.bdrc.io/shapes/core/RootShapes/> ;
  owl:versionInfo "Initial SHACL constraints for Works" ;
.

bds:WorkShape
  a sh:NodeShape ;
  rdfs:label "Work shape"@en ;
  rdfs:subClassOf rdfs:Resource ;
  sh:property bds:CommonShape-prefLabel ;
  sh:property bds:CommonShape-altLabel ;
  sh:property bds:WorkShape-hasInstance ;
  sh:property bds:WorkShape-hasTranslation ;
  sh:property bds:CommonShape-identifiedBy ;
  sh:property bds:BiblioShape-creator ;
  sh:property bds:RootShape-note ;
  sh:property bdsa:AdmShape-adminAbout ;
  sh:property bds:WorkShape-type ;
  sh:targetClass bdo:Work ;
.
bds:WorkShape-creator
  a sh:PropertyShape ;
  sh:path bdo:creator ;
  sh:class bdo:AgentAsCreator ;
  sh:nodeKind sh:IRI ;
.
# a few more properties on the same pattern: workExtractOf, workDerivativeOf, workHasDerivative, workHasParallelPartsIn, workHasParallelsIn
bds:WorkShape-hasInstance
  a sh:PropertyShape ;
  sh:path bdo:workHasInstance ;
  sh:class bdo:Instance ;
  bds:propertyShapeType bds:ExternalShape ;
.
bds:WorkShape-hasTranslation
  a sh:PropertyShape ;
  sh:path bdo:workHasTranslation ;
  sh:class bdo:Work ;
  bds:propertyShapeType bds:ExternalShape ;
.
bds:WorkShape-isAbout
  a sh:PropertyShape ;
  sh:path bdo:workIsAbout ;
  bds:classIn ( bdo:Topic bdo:Person bdo:Work bdo:Place ) ;
  bds:propertyShapeType bds:ExternalShape ;
.
bds:WorkShape-genre
  a sh:PropertyShape ;
  sh:path bdo:workGenre ;
  sh:class bdo:Topic ;
  bds:propertyShapeType bds:ExternalShape ;
.
bds:WorkShape-language
  a sh:PropertyShape ;
  sh:path bdo:language ;
  sh:in ( bdr:LangBo bdr:LangZh bdr:LangKm bdr:LangMn bdr:LangMy bdr:LangNew bdr:LangPi bdr:LangSa bdr:LangDz ) ;
  bds:propertyShapeType bds:ExternalShape ;
.
bds:WorkShape-type
  a sh:PropertyShape ;
  sh:path rdf:type ;
  sh:in ( bdo:Work ) ;
  sh:message "must have type work"@en ;
  sh:maxCount 1 ;
  sh:minCount 1 ;
.
bds:AgentAsCreatorShape-role
  sh:in ( bdr:R0ER0019 bdr:R0ER0014 bdr:R0ER0009 bdr:R0ER0011 bdr:R0ER0012 bdr:R0ER0014 bdr:R0ER0015 bdr:R0ER0016 bdr:R0ER0017 bdr:R0ER0018  bdr:R0ER0020 bdr:R0ER0021 bdr:R0ER0022 bdr:R0ER0023 bdr:R0ER0025 bdr:R0ER0026 bdr:R0ER0027 bdr:R0ER0028 bdr:R0ER0030 bdr:R0ER0031 bdr:R0ER0032 )
.
