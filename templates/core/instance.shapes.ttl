# baseURI: http://purl.bdrc.io/shapes/core/InstanceShapes/
# imports: http://purl.bdrc.io/shapes/core/RootShapes/
# prefix: InstanceShapes

@prefix InstanceShapes: <http://purl.bdrc.io/shapes/core/InstanceShapes/> .
@prefix adm: <http://purl.bdrc.io/ontology/admin/> .
@prefix bdd: <http://purl.bdrc.io/data/> .
@prefix bdo: <http://purl.bdrc.io/ontology/core/> .
@prefix bdr: <http://purl.bdrc.io/resource/> .
@prefix bds: <http://purl.bdrc.io/ontology/shapes/core/> .
@prefix bdsa: <http://purl.bdrc.io/ontology/shapes/adm/> .
@prefix bf: <http://id.loc.gov/ontologies/bibframe/> .
@prefix cc: <http://creativecommons.org/ns#> .
@prefix dash: <http://datashapes.org/dash#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix iiif2: <http://iiif.io/api/presentation/2#> .
@prefix iiif3: <http://iiif.io/api/presentation/3#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix swa: <http://topbraid.org/swa#> .
@prefix tbr: <http://purl.bdrc.io/ontology/toberemoved/> .
@prefix tosh: <http://topbraid.org/tosh#> .
@prefix vcard: <http://www.w3.org/2006/vcard/ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

InstanceShapes:
  a owl:Ontology ;
  owl:imports <http://purl.bdrc.io/shapes/core/RootShapes/> ;
  owl:imports <http://purl.bdrc.io/shapes/adm/AdminShapes/> ;
  owl:versionInfo "Initial SHACL constraints for Instance and its subclasses" ;
.
bds:InstanceShape
  a sh:NodeShape ;
  rdfs:label "Instance Shape"@en ;
  bds:identifierPrefix "MW" ;
  sh:property bds:CommonShape-prefLabel ;
  sh:property bds:CommonShape-altLabel ;
  sh:property bds:BiblioShape-creator ;
  sh:property bds:InstanceShape-instanceOf ;
  sh:property bds:CommonShape-identifiedBy ;
  sh:property bds:RootShape-note ;
  sh:property bdsa:AdmShape-adminAbout ;
  sh:property bds:InstanceShape-binding ;
  sh:property bds:InstanceShape-script ;
  sh:property bds:InstanceShape-printMethod ;
  sh:property bds:InstanceShape-appliedMaterial ;
  sh:property bds:InstanceShape-material ;
  sh:property bds:InstanceShape-publisherName ;
  sh:property bds:InstanceShape-publisherLocation ;
  sh:property bds:InstanceShape-seriesNumber ;
  sh:targetClass bdo:Instance ;
.

bds:AgentAsCreatorShape-role
  sh:in ( bdr:R0ER0010 bdr:R0ER0013 bdr:R0ER0015 bdr:R0ER0024 bdr:R0ER0030 bdr:R0ER0033 bdr:R0ER0034 )
.

bds:InstanceShape-instanceOf
  a sh:PropertyShape ;
  sh:path bdo:instanceOf ;
  sh:class bdo:Work ;
  sh:description "All instances should have one work, except bundles containing unrelated texts"@en ;
  sh:name "instance of"@en ;
  sh:maxCount 1 ;
.
bds:InstanceShape-serialInstanceOf
  a sh:PropertyShape ;
  sh:path bdo:serialInstanceOf ;
  sh:class bdo:SerialWork ;
  sh:description "An instance can be a member of a serial"@en ;
  sh:name "serial instance of"@en ;
  sh:maxCount 1 ;
.
bds:InstanceShape-script
  a sh:PropertyShape ;
  sh:path bdo:script ;
  sh:class bdo:Script ;
  sh:in (bdr:ScriptDbuCan bdr:ScriptDbuMed bdr:ScriptKhyugYig bdr:ScriptHans bdr:ScriptHant bdr:ScriptDeva bdr:ScriptKhmr bdr:ScriptLatn bdr:ScriptMong bdr:ScriptMymr bdr:ScriptBeng bdr:ScriptCyrl bdr:ScriptKhar bdr:ScriptNepaleseHooked bdr:ScriptNewa bdr:ScriptRanj bdr:ScriptSinh) ;
  sh:description "an instance may have one or more scripts"@en ;
  sh:minCount 1 ;
.
bds:InstanceShape-binding
  a sh:PropertyShape ;
  sh:path bdo:binding ;
  sh:class bdo:Binding ;
  sh:description "this PhysicalInstance may have a single Binding"@en ;
  sh:maxCount 1 ;
  sh:in (bdr:Binding_LooseLeaf_Pecha bdr:Binding_Codex_Perfect bdr:Binding_LooseLeaf_Pothi bdr:Binding_Codex_Sewn bdr:Binding_Continuous_Folded bdr:Binding_Continuous_Leporello bdr:Binding_Continuous_Scroll ) ;
  sh:name "instance binding"@en ;
.
bds:InstanceShape-printMethod
  a sh:PropertyShape ;
  sh:path bdo:printMethod ;
  sh:class bdo:PrintMethod ;
  sh:description "this PhysicalInstance may have a single PrintMethod"@en ;
  sh:in (bdr:PrintMethod_Manuscript bdr:PrintMethod_ManuscriptStylus bdr:PrintMethod_Modern bdr:PrintMethod_Relief_WoodBlock bdr:PrintMethod_Xerography bdr:PrintMethod_Relief_Letterpress) ;
  sh:name "instance print method"@en ;
.
bds:InstanceShape-material
  a sh:PropertyShape ;
  sh:path bdo:material ;
  sh:class bdo:BaseMaterial ;
  sh:in (bdr:MaterialPaper bdr:MaterialBirchBark bdr:MaterialCardboard bdr:MaterialCloth bdr:MaterialDeshog bdr:MaterialKhoiPaper bdr:MaterialLoktaPaper bdr:MaterialMultiLayerPaper bdr:MaterialPalmLeaf bdr:MaterialRicePaper bdr:MaterialSaPaper bdr:MaterialParchment bdr:MaterialDigital bdr:MaterialPalmyraPalmLeaf bdr:MaterialCoryphaPalmLeaf)
.
bds:InstanceShape-appliedMaterial
  a sh:PropertyShape ;
  sh:path bdo:appliedMaterial ;
  sh:class bdo:AppliedMaterial ;
  sh:description "both ink and (if present) paper dye"@en ;
  sh:in (bdr:AppliedMaterial_BlackInk bdr:AppliedMaterial_RedInk bdr:AppliedMaterial_GoldLeaf bdr:AppliedMaterial_SilverLeaf bdr:AppliedMaterial_IndigoDye bdr:AppliedMaterial_Poison) ;
.
bds:InstanceShape-publisherName
  a sh:PropertyShape ;
  sh:path bdo:publisherName ;
  sh:maxCount 1 ;
  sh:description "use only for modern publications, use [s.n.] in English for unknown publisher, when using Wylie, prefix with a star instead of putting in square brackets for reconstructed value"@en ;
  sh:datatype rdf:langString ;
.
bds:InstanceShape-publisherLocation
  a sh:PropertyShape ;
  sh:path bdo:publisherLocation ;
  sh:maxCount 1 ;
  sh:datatype rdf:langString ;
  sh:description "use only for modern publications, use [s.l.] in English for unknown location, when using Wylie, prefix with a star instead of putting in square brackets for reconstructed value"@en ;
  sh:datatype rdf:langString ;
.
bds:InstanceShape-seriesNumber
  a sh:PropertyShape ;
  sh:path bdo:seriesNumber ;
  sh:maxCount 1 ;
  sh:datatype xsd:string ;
.
